{
  "name": "tjquillan-github-io",
  "version": "1.0.0",
  "description": "",
  "scripts": {
    "dev": "concurrently \"npm:dev:*\"",
    "dev:hugo": "hugo server -b http://localhost -p 8000 -D --minify",
    "dev:tailwind": "NODE_ENV=development ./themes/blowfish/node_modules/@tailwindcss/cli/dist/index.mjs -c ./themes/blowfish/tailwind.config.js -i ./themes/blowfish/assets/css/main.css -o ./assets/css/compiled/main.css --jit -w",
    "build": "concurrently \"npm:build:*\"",
    "build:tailwind": "NODE_ENV=production ./themes/blowfish/node_modules/@tailwindcss/cli/dist/index.mjs -c ./themes/blowfish/tailwind.config.js -i ./themes/blowfish/assets/css/main.css -o ./assets/css/compiled/main.css --jit",
    "format": "prettier . --cache --write",
    "prepare": "concurrently \"npm:prepare:*\"",
    "prepare:husky": "husky",
    "prepare:blowfish": "cd ./themes/blowfish && npm install"
  },
  "devDependencies": {
    "concurrently": "9.2.1",
    "husky": "9.1.7",
    "lint-staged": "15.5.1",
    "prettier": "3.7.4",
    "prettier-plugin-go-template": "0.0.15",
    "prettier-plugin-tailwindcss": "0.7.2"
  },
  "lint-staged": {
    "!(themes/*)*": "prettier --ignore-unknown --write --cache"
  }
}
